<% layout('/layouts/boilerplate') %>
<div class="row">
     <h1 class="text-center">Edit Place</h1>
     <div class="col-md-6 offset-md-3">
          <form action="/places/<%=place._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
               <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input value="<%=place.title%>" class="form-control" type="text" name="place[title]" id="title" placeholder="living near nature" required>
               </div>
               <div class="mb-3">
                    <label class="form-label" for="location">Location of a place</label>
                    <input value="<%=place.location%>" class="form-control" type="text" name="place[location]"  id="location" placeholder="Poprad" required>
               </div>
               <div class="mb-3">
                    <label for="image" class="form-label">Add more images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
               </div>
               <div class="mb-3">
                    <label class="form-label" for="price">Add price</label>
                    <div class="input-group">
                         <span class="input-group-text" id="price-label">â‚¬</span>
                         <input value="<%=place.price%>" type="text" class="form-control" id="price" aria-label="price" placeholder="0.00" aria-describedby="price-label" name="place[price]" required>
                         <span class="input-group-text"></span>
                    </div>
               </div>
               <div class="mb-3">
                    <label class="form-label" for="description">Description of the place</label>
                    <textarea class="form-control" type="text" name="place[description]" id="description" placeholder="Poprad" required><%=place.description%></textarea>
               </div>
                    <div class="mb-3">
                         <% place.images.forEach(function(img, i) { %> 
                              <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                              <div class="form-check-inline">
                                   <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename%>">
                              </div>
                              <label for="image-<%=i%>">Delete?</label>
                         <% }) %> 
                    </div>
               <div class="mb-3">
                    <button class="btn btn-success">Update Place</button>
               </div>
          </form>
          <a href="/places">All Places</a>
          <a href="/places/<%=place._id%>">Back to place</a>
     </div>
</div>