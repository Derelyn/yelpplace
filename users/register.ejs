<% layout('/layouts/boilerplate') %>
<h1>Register</h1>
<div class="container justify-content-center align-items-center mt-5">
  <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
    <div class="card shadow">
      <div class="card-body">
        <h5 class="card-title">Register</h5>
        <form action="/register" method="POST" class="validated-form">
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="username" autofocus required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <p>Because of GDPR I can not collect emails, even testing ones.</p>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password" placeholder="password" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-success">Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
